<% include ../partials/header %>

<div class="container">
    <h1>Create a new Campground</h1>

    <form action="/campground" method="POST">
        <div class="form-group">
            <label for="name">Name</label>
            <input class="form-control" type="text" name="name" placeholder="name">
        </div>

        <div class="form-group">
            <label for="image">Image URL</label>
            <input class="form-control" type="text" name="image" placeholder="image url">
        </div>
        
        <div class="form-group">
            <label for="description">Description</label>
            <textarea class="form-control" name="description" placeholder="description" rows="5"></textarea>
        </div>

        <button class="btn btn-success">Submit!</button>
    </form>

    <a href="/campground">Go back to the list of campgrounds</a>
</div>

<% include ../partials/footer %>