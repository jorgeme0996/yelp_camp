<% include ../partials/header %>

<div class="container">
    <h1>Edit campground: <%= campground.name %></h1>

    <form action="/campground/<%= campground._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <label for="name">Name</label>
            <input class="form-control" type="text" name="data[name]" value="<%= campground.name %>">
        </div>

        <div class="form-group">
            <label for="image">Image URL</label>
            <input class="form-control" type="text" name="data[imagenes]" value="<%= campground.imagenes %>">
        </div>
        
        <div class="form-group">
            <label for="description">Description</label>
            <input class="form-control" type="text" name="data[description]" value="<%= campground.description %>" >
        </div>

        <button class="btn btn-success">Submit!</button>
    </form>

    <a href="/campground">Go back to the list of campgrounds</a>
</div>

<% include ../partials/footer %>